<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="ca.uottawa.finalproject.Covid19CaseDetailsFragment">

    <TextView
        android:id="@+id/textview_country"
        android:layout_width="match_parent"
        android:layout_marginEnd="4dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textview_countryCode"
        android:layout_width="match_parent"
        android:layout_marginEnd="4dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textview_province"
        android:layout_width="match_parent"
        android:layout_marginEnd="4dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textview_city"
        android:layout_width="match_parent"
        android:layout_marginEnd="4dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textview_cityCode"
        android:layout_width="match_parent"
        android:layout_marginEnd="4dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textview_lat"
        android:layout_width="match_parent"
        android:layout_marginEnd="4dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textview_lon"
        android:layout_width="match_parent"
        android:layout_marginEnd="4dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textview_cases"
        android:layout_width="match_parent"
        android:layout_marginEnd="4dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textview_status"
        android:layout_width="match_parent"
        android:layout_marginEnd="4dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textview_date"
        android:layout_width="match_parent"
        android:layout_marginEnd="4dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_save_or_remove_database"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>